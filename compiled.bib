issn = {2772-3755},
doi = {https://doi.org/10.1016/j.atech.2025.101202},
url = {https://www.sciencedirect.com/science/article/pii/S2772375525004332},
author = {Yihang Huang and Baolei Lyu and Tianlei Gao and Xudong Wu and Yugang Duan},
keywords = {Corn, Phenology, Deep learning, Multimodal, Classification},
abstract = {Accurate identification of crop phenology stages is critical for optimizing agricultural practices such as irrigation and pest control, yet existing methods relying on single-modality data often fail to resolve visually ambiguous stages. To address this limitation, we present a multimodal deep learning multi-modal fusion network CornMFN that synergistically integrates visual features from crop imagery with meteorological variables for corn phenology stage classification. The proposed architecture combines a ConvNeXt backbone for image feature extraction, MLP modules for processing structured weather data, and a cross-attention mechanism to fuse heterogeneous modalities. We constructed a rigorously curated dataset of 151,140 image-weather pairs spanning 10 phenological stages across three agro-ecological zones in China, incorporating spatiotemporally synchronized meteorological parameters. Experimental evaluations demonstrate that CornMFN achieves 91.19 % classification accuracy, outperforming conventional image-only models by 6.91 % absolute improvement through effective multimodal fusion. Ablation studies quantify the cross-attention module's contribution to 5.39 % of the performance gain, while comparative analyses reveal superior robustness against environmental variabilities compared to unimodal approaches. These results establish that joint modeling of visual and meteorological features significantly enhances phenological recognition accuracy, particularly for transitional stages with minimal visual distinctions. The framework provides a deployable solution for precision agriculture while advancing multimodal learning methodologies through its novel fusion paradigm, with potential applications extending to other crop species and agricultural decision systems.}
}
@article{ZHAO2023110928,
title = {Prompt learning for metonymy resolution: Enhancing performance with internal prior knowledge of pre-trained language models},
