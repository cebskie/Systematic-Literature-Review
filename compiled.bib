@article{ZHOU2024e30185,
title = {Algorithm for community security risk assessment and influencing factors analysis by back propagation neural network},
journal = {Heliyon},
volume = {10},
number = {9},
pages = {e30185},
year = {2024},
issn = {2405-8440},
